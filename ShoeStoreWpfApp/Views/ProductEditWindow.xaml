<Window x:Class="ShoeStoreWpfApp.Views.ProductEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeStoreWpfApp.Views"
        mc:Ignorable="d"
        Title="Редактирование продукта" Height="600" Width="600"
        Icon="{StaticResource AppIcon}"
        Background="{StaticResource MainBackground}"
        FontFamily="{StaticResource AppFontFamily}">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Добавить новый товар" Grid.Row="0" Grid.ColumnSpan="2" 
               FontSize="20" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"
               Background="{StaticResource AttentionColor}"/>

        <TextBlock Text="Идентификатор" Grid.Row="1" Grid.Column="0" />
        <TextBox x:Name="ProductIdTextBox" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Наименование" Grid.Row="2" Grid.Column="0" />
        <ComboBox x:Name="ProductNameComboBox" Grid.Row="2" Grid.Column="1" />

        <TextBlock Text="Описание" Grid.Row="3" Grid.Column="0" />
        <TextBox x:Name="ProductDescriptionTextBox" Grid.Row="3" Grid.Column="1" Height="100" AcceptsReturn="True" />

        <TextBlock Text="Цена" Grid.Row="4" Grid.Column="0" />
        <TextBox x:Name="PriceTextBox" Grid.Row="4" Grid.Column="1" />

        <TextBlock Text="Количество на складе" Grid.Row="5" Grid.Column="0" />
        <TextBox x:Name="StockQuantityTextBox" Grid.Row="5" Grid.Column="1" />

        <TextBlock Text="Производитель" Grid.Row="6" Grid.Column="0" />
        <ComboBox x:Name="ManufacturerComboBox" Grid.Row="6" Grid.Column="1" Background="{StaticResource AttentionColor}"/>

        <TextBlock Text="Поставщик" Grid.Row="7" Grid.Column="0" />
        <ComboBox x:Name="SupplierComboBox" Grid.Row="7" Grid.Column="1" />

        <TextBlock Text="Категория" Grid.Row="8" Grid.Column="0" />
        <ComboBox x:Name="CategoryComboBox" Grid.Row="8" Grid.Column="1" />

        <TextBlock Text="Единица измерения" Grid.Row="9" Grid.Column="0" />
        <ComboBox x:Name="UnitOfMeasureComboBox" Grid.Row="9" Grid.Column="1" />

        <TextBlock Text="Активная скидка" Grid.Row="10" Grid.Column="0" />
        <TextBox x:Name="ActiveDiscountTextBox" Grid.Row="10" Grid.Column="1" />

        <TextBlock Text="Фото товара" Grid.Row="11" Grid.Column="0" />
        <Image x:Name="ProductImage" Grid.Row="11" Grid.Column="1" Width="100" Height="100" Stretch="Uniform" HorizontalAlignment="Left"/>

        <Button x:Name="UploadImageButton" Content="Загрузить Фото" Click="UploadImageButton_Click" 
            Grid.Row="11" Grid.ColumnSpan="2" Width="100" Height="25" HorizontalAlignment="Right"/>

        <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click"  
                Grid.Row="12" Grid.ColumnSpan="2" Width="75" Height="25" 
                Margin="5" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>