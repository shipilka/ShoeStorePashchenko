<Window x:Class="ShoeStoreWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoeStoreWpfApp"
        mc:Ignorable="d"
        Title="Вход" Height="300" Width="400"
        Icon="{StaticResource AppIcon}"
        Background="{StaticResource SecondaryBackground}"
        FontFamily="{StaticResource AppFontFamily}">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Логин" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль" FontSize="16" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <Button x:Name="LoginButton" Content="Войти" Width="100" Click="LoginButton_Click"/>
            <TextBlock x:Name="ResultTextBlock" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
