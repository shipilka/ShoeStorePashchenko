@{
    var userId = Context.Session.GetInt32("UserId");
    var userIsAuthenticated = userId.HasValue; // Проверка авторизации
    var fullName = Context.Session.GetString("FullName"); // Извлечение ФИО из сессии
    var userRoles = Context.Session.GetString("UserRoles")?.Split(",") ?? Array.Empty<string>();
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoeStoreWebApplication</title>
    <link rel="icon" href="~/images/Icon.ico" /> <!-- Иконка приложения -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/Icon.png" alt="Логотип" style="max-height: 50px;" /> <!-- Логотип -->
                    ShoeStoreWebApplication
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">Продукты</a>
                        </li>

                        @if (userIsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Orders/Index">Мои заказы</a>
                            </li>
                            @if (userRoles.Contains("Администратор") || userRoles.Contains("Менеджер"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-page="/AllOrders/Index">Все заказы</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (userIsAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="navbar-text me-2">@fullName</span>
                                <a class="nav-link" asp-page="/Login" asp-page-handler="Logout">
                                    <button type="button" class="btn btn-link nav-link">Выйти</button>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item d-flex align-items-center">
                                <form method="get" asp-page="/Login">
                                    <button type="submit" class="btn btn-link nav-link">Войти</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - ShoeStoreWebApplication - <a asp-area="" asp-page="/Privacy">Конфиденциальность</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>